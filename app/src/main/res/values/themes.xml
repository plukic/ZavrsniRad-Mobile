        <item name="text_title_small">@style/title_small_co</item>
        <item name="text_subtitle_small">@style/subtitle_small</item>
        <item name="background_primary">#ffffff</item>
        <item name="background_primary_transparent">#94ffffff</item>
        <item name="background_secondary">#FFFFFF</item>
        <item name="tabs_style">@style/tabs_style_co</item>
        <item name="toolbar_style">@style/toolbar_style_co</item>

        <item name="primaryTextColor">@color/dark_purple</item>
        <item name="secondaryTextColor">@color/light_purple</item>
        <item name="login_screen">@drawable/loginscreen</item>
        <item name="colorSplashScreen">@color/colorAccent</item>


    </style>
